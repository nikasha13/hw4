<div class="container mb-4">
<h1><%= @place["name"] %></h1>
</div>

<div class="container mb-4">
<h2>My Entries</h2>
</div>
<div class="container">
<div class="row">
<% for entry in @entries %>
<div class="col-12 col-md-6 col-lg-4">
<div class="p-3">
  <h3><%= entry["title"] %></h3>
  <h4><%= entry["occurred_on"] %></h4>
  <p><%= entry["description"] %></p>
  </div>
  </div>
<% end %>
</div>
</div>

<div class="container">
<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-outline-secondary">New Entry</a>
</p>
</div>

<div class="d-flex justify-content-end">
<p>
  <a href="/places" class="btn btn-secondary btn-sm">Back to All Places</a>
</p>
</div>